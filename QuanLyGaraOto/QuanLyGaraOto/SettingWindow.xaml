<Window x:Class="QuanLyGaraOto.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyGaraOto"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        DataContext="{StaticResource SettingVM}"
        mc:Ignorable="d"
        Title="Cài đặt" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Button
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    materialDesign:ButtonAssist.CornerRadius="16 16 0 0"
                    Margin="3 0 3 0"
                    ToolTip="MaterialDesignRaisedAccentButton with Round Top Corners" Background="#FF3A95F7"
                    Command="{Binding ChangeAppSettingVis}">
                    <TextBlock Text="Ứng dụng" />
                </Button>
            </Grid>

            <Grid Grid.Column="1">
                <Button
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    materialDesign:ButtonAssist.CornerRadius="16 16 0 0"
                    Margin="3 0 3 0"
                    ToolTip="MaterialDesignRaisedAccentButton with Round Top Corners" Background="#FF3A95F7"
                    Command="{Binding ChangeBrandSettingVis}">
                    <TextBlock Text="Hãng xe" />
                </Button>
            </Grid>

            <Grid Grid.Column="2">
                <Button
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    materialDesign:ButtonAssist.CornerRadius="16 16 0 0"
                    Margin="3 0 3 0"
                    ToolTip="MaterialDesignRaisedAccentButton with Round Top Corners" Background="#FF3A95F7"
                    Command="{Binding ChangeUserSettingVis}">
                    <TextBlock Text="User" />
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid x:Name="AppSetting" Visibility="Collapsed">
                <!--Visibility="{Binding AppSettingVis, Converter={StaticResource BooleanToVisibilityConverter}}"-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="55"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1">
                            <Label Content="Số xe tối đa" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Label Content="Số điện thoại" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Label Content="Email" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Row="4">
                            <Label Content="Địa chỉ" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Row="5">
                            <Button
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                IsEnabled="{Binding IsEnableChangeButtonInGaraInformation}"
                                Content="Lưu thay đổi" 
                                Height="35" Margin="29,11,1,9"
                                Command="{Binding ChangeGaraInformation}"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="55"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1">
                            <TextBox Text="{Binding MaxCarReception}" IsEnabled="True" TextAlignment="Center"
                                     MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBox Text="{Binding Telephone}" IsEnabled="True" TextAlignment="Center"
                                     MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="3">
                            <TextBox Text="{Binding Email}" IsEnabled="True" TextAlignment="Center"
                                     MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="4">
                            <TextBox Text="{Binding Address}" IsEnabled="True" TextAlignment="Center"
                                     MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="5">
                            <Button
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                Content="Hoàn tác" 
                                IsEnabled="{Binding IsEnableResetButtonInGaraInformation}"
                                Height="35" Margin="39,11,91,9"
                                Command="{Binding ResetGaraInformation}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid x:Name="BrandSetting" Visibility="Collapsed">
                <!--Visibility="{Binding BrandSettingVis, Converter={StaticResource BooleanToVisibilityConverter}}"-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <ListView ItemsSource="{Binding ListBrands}" SelectedItem="{Binding SelectedBrand}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"></GridViewColumn>
                                <GridViewColumn Header="Hiệu Xe" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <Button
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                Content="Thêm" 
                                IsEnabled="True"
                                Height="35" Margin="35 0 35 0"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                Content="Sửa" 
                                IsEnabled="True"
                                Height="35" Margin="35 0 35 0"/>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Button
                                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                Content="Xóa" 
                                IsEnabled="True"
                                Height="35" Margin="35 0 35 0"/>
                    </Grid>
                </Grid>

                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <TextBox Text="add" IsEnabled="True" TextAlignment="Center"
                                     MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <TextBox Text="modify" IsEnabled="True" TextAlignment="Center"
                                     MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    
                </Grid>
            </Grid>
            <Grid x:Name="UserSetting" Visibility="Visible">
                <!--Visibility="{Binding UserSettingVis, Converter={StaticResource BooleanToVisibilityConverter}}"-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <Label Content="Tên" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Label Content="Địa chỉ" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Label Content="Ngày sinh" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <Label Content="Số điện thoại" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                    </Grid>
                    <Grid Grid.Row="5">
                        <Label Content="Số CMND" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                    </Grid>
                    <Grid Grid.Row="6">
                        <Button
                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                            Content="Lưu thay đổi" 
                            IsEnabled="{Binding IsEnableChangeButtonInUserInformation}"
                            Height="35" Margin="22.267,11.8,7.333,8.199"
                            Command="{Binding ChangeUserInformation}"/>
                    </Grid>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <TextBox
                            Text="{Binding UserName}" IsEnabled="True" TextAlignment="Center"
                                  MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <TextBox
                            Text="{Binding UserAddress}" IsEnabled="True" TextAlignment="Center"
                                 MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="3">
                        <TextBox
                            Text="{Binding UserBirth, StringFormat='dd/MM/yyyy'}" IsEnabled="True" TextAlignment="Center"
                                 MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <TextBox
                            Text="{Binding UserTelephone}" IsEnabled="True" TextAlignment="Center"
                                 MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="5">
                        <TextBox
                            Text="{Binding UserCMND}" IsEnabled="True" TextAlignment="Center"
                                 MinWidth="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="6">
                        <Button
                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                            Content="Hoàn tác" 
                            IsEnabled="{Binding IsEnableResetButtonInUserInformation}"
                            Height="35" Margin="27.8,12.683,101.6,7.316"
                            Command="{Binding ResetUserInformation}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
