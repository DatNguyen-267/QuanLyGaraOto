<Window x:Class="QuanLyGaraOto.CarServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyGaraOto"
        mc:Ignorable="d"
       
        Name="CarServiceWD"
        Title="Dịch vụ và thông tin xe" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#3d4751">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Dịch vụ và thông tin xe"
                       FontSize="26"
                       Margin="0 10 0 10"
                       Foreground="White"
                       ></TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ScrollViewer>
                <materialDesign:Card Grid.Column="0"
                                 Margin="20 20 20 10"
                                 Height="auto"
                                 >
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="Grid" x:Key="GridWidth400">
                                <Setter Property="Width" Value="auto"></Setter>
                                <Setter Property="Height" Value="50"></Setter>
                                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            </Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Width" Value="30"></Setter>
                                <Setter Property="Height" Value="30"></Setter>
                                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                                <Setter Property="Margin" Value="0 0 10 0"></Setter>

                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="80"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <StackPanel>
                                <Grid  Margin="10 20 10 0">
                                    <Grid Style="{DynamicResource ResourceKey=GridWidth400}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="Account" 
                                                     Grid.Column="0"/>
                                        <TextBox Grid.Column="2"
                                            Text="{Binding UserName}"
                                     materialDesign:HintAssist.Hint="Tên chủ xe"
                                     Width="200"
                                         Margin="0 0 0 10"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        VerticalAlignment="Center" />
                                    </Grid>
                                </Grid>
                                <Grid  Margin="10 10 10 0">
                                    <Grid Style="{DynamicResource ResourceKey=GridWidth400}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="ClipboardOutline" 
                                                     Grid.Column="0"/>
                                        <TextBox Grid.Column="1"
                                     Margin="0 0 0 10"
                            materialDesign:HintAssist.Hint="Biển số xe"
                                     Width="200"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            VerticalAlignment="Center" />
                                    </Grid>
                                </Grid>
                                <Grid Margin="10 10 10 0">
                                    <Grid Style="{DynamicResource ResourceKey=GridWidth400}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="Watermark" 
                                                     Grid.Column="0"/>
                                        <ComboBox Grid.Column="1"
                                Width="200"
                                      ItemsSource="{Binding ListCarBrand}"
                                      DisplayMemberPath="Name"
                                VerticalAlignment="Center"
                                materialDesign:HintAssist.Hint="Hiệu xe"
                                materialDesign:HintAssist.HintOpacity=".26"
                                IsEditable="True">
                                        </ComboBox>
                                    </Grid>
                                </Grid>
                                <Grid  Margin="10 10 10 0">
                                    <Grid Style="{DynamicResource ResourceKey=GridWidth400}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="MapMarkerOutline" 
                                                     Grid.Column="0"/>
                                        <TextBox Grid.Column="2"
                            materialDesign:HintAssist.Hint="Địa chỉ"
                                     Width="200"
                                         Margin="0 0 0 10"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            VerticalAlignment="Center" />
                                    </Grid>
                                </Grid>
                                <Grid Margin="10 10 10 0">
                                    <Grid Style="{DynamicResource ResourceKey=GridWidth400}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="Phone" 
                                                     Grid.Column="0"/>
                                        <TextBox Grid.Column="1"
                                     Margin="0 0 0 10"
                            materialDesign:HintAssist.Hint="Số Điện thoại"
                                     Width="200"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            VerticalAlignment="Center" />
                                    </Grid>
                                </Grid>
                                <Grid Margin="10 10 10 0" Height="70">
                                    <Grid Style="{DynamicResource ResourceKey=GridWidth400}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="DateRange" 
                                                     Grid.Column="0"/>
                                        <DatePicker Grid.Column="1"
                               Width="200"
                                        Height="auto"
                                VerticalAlignment="Center"
                              materialDesign:HintAssist.Hint="Ngày tiếp nhận"
                              Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Button
                           Grid.Column="0"
                            Width="auto"
                            Background="#455A64"
                            HorizontalAlignment="Center"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          ToolTip="Resource name: MaterialDesignRaisedButton"
                          Content="Thay đổi thông tin" />
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </ScrollViewer>
           
            <materialDesign:Card Grid.Column="1"
                                 Margin="0 20 20 10"
                                
                                 >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="70"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button 
                                Width="100"
                                Content="Sửa"
                                Margin="10 0 10 0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">

                            </Button>
                            <Button 
                                Width="100"
                                Content="Xóa"
                                Margin="10 0 10 0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                            </Button>
                            <Button 
                                Width="100"
                                Content="Thêm"
                                Margin="10 0 10 0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                            </Button>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <ScrollViewer>
                            <ListView 
                                ItemsSource="{Binding ListSupply}" 
                                   HorizontalContentAlignment="Left"
                                >
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="STT" DisplayMemberBinding="{Binding Id,UpdateSourceTrigger=PropertyChanged,Mode=OneWayToSource}"></GridViewColumn>

                                        <GridViewColumn Header="Nội dung" DisplayMemberBinding="{Binding Id,UpdateSourceTrigger=PropertyChanged,Mode=OneWayToSource}"></GridViewColumn>
                                        <GridViewColumn Header="Vật tư" DisplayMemberBinding="{Binding Id,UpdateSourceTrigger=PropertyChanged,Mode=OneWayToSource}"></GridViewColumn>
                                        <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding Id,UpdateSourceTrigger=PropertyChanged,Mode=OneWayToSource}"></GridViewColumn>
                                        <GridViewColumn Header="Đơn giá" DisplayMemberBinding="{Binding Id,UpdateSourceTrigger=PropertyChanged,Mode=OneWayToSource}"></GridViewColumn>
                                        <GridViewColumn Header="Tiền công" DisplayMemberBinding="{Binding Id,UpdateSourceTrigger=PropertyChanged,Mode=OneWayToSource}"></GridViewColumn>
                                        <GridViewColumn Header="Thành tiền" DisplayMemberBinding="{Binding Id,UpdateSourceTrigger=PropertyChanged,Mode=OneWayToSource}"></GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                    <Grid Grid.Row="2" VerticalAlignment="Bottom"
                          
                          ></Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                <Button
                    Content="Thanh toán và hoàn trả xe"
                    Width="auto"
                    FontSize="16"
                    Height="40"
                    Margin="10 0 10 0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
