<Window x:Class="QuanLyGaraOto.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyGaraOto"
        mc:Ignorable="d"
        Title="ServiceWindow" Height="450" Width="800"
        DataContext="{StaticResource ServiceVM}"    
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock 
                   Text="{Binding Title}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="5 0 5 0"            
                    FontSize="24"
                    ></TextBlock>
            </Grid>
            <Grid Grid.Column="1">
                <Button
                    Command="{Binding CarReceptionCommand}"
                    Content="Thêm xe"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Width="auto"
                    Margin="10 5 20 5"
                    />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.Resources>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                
            </Grid>
            <Grid Grid.Column="1">
                <DockPanel Width="300">
                    <Button
                        Width="100"
                               Background="#455A64"
                        Margin="10 0 10 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                    Content="Xóa">
                    </Button>
                    <Button
                               Background="#455A64"
                        Width="100"
                        Margin="10 0 10 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                    Content="Chi Tiết">
                    </Button>
                </DockPanel>
            </Grid>
            
        </Grid>
        <Grid Grid.Row="2">
            <ListView ItemsSource="{Binding ListGara}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="STT" DisplayMemberBinding="{Binding Id, Mode=OneWayToSource
                            ,UpdateSourceTrigger=PropertyChanged}"></GridViewColumn>
                        <GridViewColumn Header="Biển Số" DisplayMemberBinding="{Binding Number, Mode=OneWayToSource
                            ,UpdateSourceTrigger=PropertyChanged}"></GridViewColumn>
                        <GridViewColumn Header="Hiệu Xe" DisplayMemberBinding="{Binding Brand, Mode=OneWayToSource
                            ,UpdateSourceTrigger=PropertyChanged}"></GridViewColumn>
                        <GridViewColumn Header="Chủ Xe" DisplayMemberBinding="{Binding Customer.Name, Mode=OneWayToSource
                            ,UpdateSourceTrigger=PropertyChanged}"></GridViewColumn>
                        <GridViewColumn Header="Tiền nợ" DisplayMemberBinding="{Binding Debt, Mode=OneWayToSource
                            ,UpdateSourceTrigger=PropertyChanged}"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
